<% include ./_cpanelHeader.ejs%>
    <div class="title-block">
        <h3 class="title">
            New Post <span class="sparkline bar" data-type="bar"></span>
        </h3>
    </div>
    <form name="item" method="post">
        <div class="card card-block">
            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Title:
                </label>
                <div class="col-sm-10"> <input type="text" name="title" class="form-control boxed" placeholder=""
                        required> </div>
            </div>
            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Content:
                </label>
                <div class="col-sm-10"> <textarea id="editor" name="content"></textarea> </div>
            </div>

            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                description:
            </label>
            <div class="col-sm-10"> <textarea name="description" class="form-control boxed" cols="20"
                    rows="10"></textarea> </div>
        </div>

            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Category:
                </label>

                <div class="col-sm-10"> <select multiple name="category" class="c-select form-control boxed">
                        <%for(c of cats){%>
                            <option value="<%= c.Caturl %>">
                                <%= c.Name %>
                            </option>
                            <%}%>
                    </select> </div>
            </div>

            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Tags:
                </label>
                <div class="col-sm-10"> <input type="text" name="tags" class="form-control boxed"
                        placeholder="Tags separeted by comma"> </div>
            </div>

            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    ImageURL:
                </label>
                <div class="col-sm-10"> <input type="text" name="image" class="form-control boxed" placeholder="">
                </div>
            </div>


            <div class="form-group row"> <label class="col-sm-2 form-control-label text-xs-right">
                    Image Alt Tag:
                </label>
                <div class="col-sm-10"> <input type="text" name="imagealt" class="form-control boxed"
                        placeholder="Alt Tag for Image"> </div>
            </div>

            <div class="form-group row">
                <div class="col-sm-10 col-sm-offset-2"> <button type="submit" class="btn btn-primary">
                        Submit
                    </button> </div>
            </div>
        </div>
    </form>

    <link rel="stylesheet" href="https://unpkg.com/jodit@3.24.2/build/jodit.es2018.min.css" />
    <script src="https://unpkg.com/jodit@3.24.2/build/jodit.es2018.min.js"></script>
    <script>
        var editor = Jodit.make('#editor');
        editor.value = '<p>start</p>';
    </script>
    <% include ./_cpanelFooter.ejs%>